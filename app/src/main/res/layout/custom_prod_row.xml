<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="72dp"
    android:padding="10dp">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <ImageView
            android:id="@+id/prodImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_home" />

        <TextView
            android:id="@+id/prodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/prodImg"
            android:layout_marginLeft="56dp"
            android:gravity="right"
            android:padding="10dp"
            android:text="Hitman Agent 47"
            android:textSize="15dp" />
        <!--
            <TextView
                android:id="@+id/movieReleaseDate"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/movieTitle"
                android:padding="10dp"
                android:text="31-31-31"
                android:textSize="13dp" />
        -->

        <TextView
            android:id="@+id/prodUnicost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/prodName"
            android:padding="5dp"
            android:text="0000"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/prodBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/prodUnicost"
            android:padding="5dp"
            android:text="0000"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/prodCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/prodBarcode"
            android:padding="5dp"
            android:text="0000"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/prodCat"
            android:padding="2dp"
            android:text="0000"
            android:textSize="9dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>